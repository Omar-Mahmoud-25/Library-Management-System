@model LibraryManagementSystem.Models.UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle"></i> User Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-id-badge"></i> ID
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Id
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user"></i> Full Name
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Model.FullName</strong>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-envelope"></i> Email
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Email
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-phone"></i> Phone Number
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                @Model.PhoneNumber
                            }
                            else
                            {
                                <span class="text-muted">No phone number provided</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-calendar-alt"></i> Joining Date
                        </dt>
                        <dd class="col-sm-8">
                            @Model.JoiningDate.ToString("dd MMM yyyy")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user-shield"></i> Role
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">User</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-toggle-on"></i> Status
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-dark">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-book"></i> Borrowed Books
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info fs-6">@Model.BorrowedBooksCount</span>
                            @if (Model.BorrowedBooksCount > 0)
                            {
                                <small class="text-muted ms-2">book(s) borrowed</small>
                            }
                            else
                            {
                                <small class="text-muted ms-2">no borrowed books</small>
                            }
                        </dd>
                    </dl>

                    @if (!Model.IsActive)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>This user is currently inactive.</div>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="ToggleAdmin" asp-route-id="@Model.Id" method="post" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to toggle admin status for @Model.FullName? This action cannot be undone.')">
                                @Html.AntiForgeryToken()
                                @* <button type="button" class="btn btn-secondary js-toggle-admin me-md-2" data-id="@Model.Id"> *@
                                <button type="submit" class="btn btn-secondary me-md-2">
                                    <i class="fas fa-user-shield"></i> Toggle Admin
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete @Model.FullName? This action cannot be undone.')">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
