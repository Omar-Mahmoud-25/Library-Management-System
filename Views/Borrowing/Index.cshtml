@using LibraryManagementSystem.Entities
@model IEnumerable<Borrowing>

@{
    ViewData["Title"] = "Borrowing";
}

<style>
    .top-links {
        display: flex;
        gap: 30px;
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 20px;
    }

    .top-links a {
        text-decoration: none;
        color: #ccc;
        position: relative;
        font-weight: 500;
        transition: 0.3s;
    }

    .top-links a:hover {
        color: white;
    }

    .top-links a.active::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #00ff88; 
    }

    .stats {
        display: flex;
        gap: 20px;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .stats .card {
        padding: 15px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        background-color: #f8f9fa;
        flex: 1;
    }

    .stats h3 {
        margin-bottom: 5px;
        color: #333;
    }

    .stats p {
        font-size: 20px;
        font-weight: bold;
        color: #007bff;
    }
</style>

<div class="top-links">
    <a asp-controller="User" asp-action="Index" class="@(ViewData["Title"]?.ToString() == "Users" ? "active" : "")">Users</a>
    <a asp-controller="Borrowing" asp-action="Index" class="@(ViewData["Title"]?.ToString() == "Borrowings" ? "active" : "")">Borrowings</a>
    <a asp-controller="Book" asp-action="Index" class="@(ViewData["Title"]?.ToString() == "Books" ? "active" : "")">Books</a>
</div>

<div class="stats">
    <div class="card">
        <h3>Total Borrowed</h3>
        <p>@ViewBag.BorrowedCount</p>
    </div>
    <div class="card">
        <h3>Returned</h3>
        <p>@ViewBag.ReturnedCount</p>
    </div>
    <div class="card">
        <h3>Overdue</h3>
        <p>@ViewBag.OverdueCount</p>
    </div>
</div>


@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No borrowings!</h4>
        <p class="mb-0">No borrowings were added yet.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>User</th>
                    <th>Borrowed Date</th>
                    <th>Due Date</th>
                    <th>Returned Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Book?.Title</td>
                        <td>@b.User?.FirstName @b.User?.LastName</td>
                        <td>@b.BorrowedDate.ToShortDateString()</td>
                        <td>@b.DueDate.ToShortDateString()</td>
                        <td>@(b.ReturnedDate?.ToShortDateString() ?? "Not Returned")</td>
                        <td>
                            @if (b.IsReturned)
                            {
                                <span class="badge bg-success">Returned</span>
                            }
                            else if (b.IsOverdue)
                            {
                                <span class="badge bg-danger">Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Borrowed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
{
    <script src="~/js/borrowings-index.js" asp-append-version="true"></script>
}
