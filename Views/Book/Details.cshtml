@using LibraryManagementSystem.Entities
@model Book

@{
    ViewData["Title"] = Model.Title;
}

<style>
    .book-details-card {
        background-color: #1e1e1e;
        color: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 255, 136, 0.2);
        margin-top: 40px;
    }

   
    .book-details-card h1 {
        color: #1e90ff; 
    }

    .book-details-card h4,
    .book-details-card p {
        color: #ccc;
    }

    
    .book-details-card .badge {
        background-color: #ffb84d; 
        color: #000;
    }

    .book-details-card img {
        border-radius: 0;
        object-fit: cover;
    }

    .book-details-actions .btn-edit {
        background-color: #ffd700; 
        border-color: #ffd700;
        color: #000;
    }

    .book-details-actions .btn-edit:hover {
        background-color: #e6c200;
        border-color: #e6c200;
        color: #000;
    }

    .book-details-actions .btn-outline-secondary {
        color: #ccc;
        border-color: #555;
    }

    .book-details-actions .btn-outline-secondary:hover {
        color: #fff;
        border-color: #777;
    }
</style>

<div class="card book-details-card">
    <div class="card-body p-0">
        <div class="row g-0">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="fw-bolder">@Model.Title</h1>
                    <span class="badge fs-5 mb-4">@Model.BookCategories</span>
                    <h4 class="mb-3 text-secondary">By @Model.Author</h4>
                    <p class="fs-5">@Model.Description</p>
                </div>

                <div class="mt-3">
                    <p class="fs-6">
                        <strong>Publication Year:</strong> @Model.PublishedDate.Year
                    </p>
                    <p class="fs-6">
                        <strong>Available Copies:</strong> @Model.CopiesAvailable
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <img src="@($"/images/{Model.CoverImageUrl}")" alt="@Model.Title" class="w-100 h-100 object-fit-cover" />
            </div>
        </div>
    </div>
</div>

<div class="mt-4 book-details-actions">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit ms-2">
        <i class="bi bi-pencil-fill"></i> Edit
    </a>
</div>
