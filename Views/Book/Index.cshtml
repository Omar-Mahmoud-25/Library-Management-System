@model List<LibraryManagementSystem.Entities.Book>

@{
    ViewData["Title"] = "Available Books";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var categories = ViewBag.Categories as List<SelectListItem> ?? new List<SelectListItem>();
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
    }

    .book-card {
        background-color: #1e1e1e;
        color: #fff;
        border: 1px solid #333;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 20px;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 255, 136, 0.3);
    }

    .book-img {
        border-radius: 10px 10px 0 0;
        height: 250px;
        object-fit: cover;
        width: 100%;
    }

    .book-body {
        padding: 15px;
    }

    .book-body h5 {
        color: #00ff88;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

    .action-buttons .btn {
        flex: 1;
        margin: 0 3px;
    }

    .filter-section {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .category-badge {
        font-size: 0.75rem;
        margin-right: 0.25rem;
        margin-bottom: 0.25rem;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-book"></i> Available Books</h2>
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Book
            </a>
        }
    </div>

    <!-- ✅ Filter and Search Section -->
    <div class="filter-section">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="categorySelect" class="form-label text-light">Filter by Category</label>
                <select name="categoryId" id="categorySelect" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category.Value" selected="@(category.Value == selectedCategoryId?.ToString())">
                            @category.Text
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label for="searchInput" class="form-label text-light">Search Books</label>
                <input name="search" id="searchInput" type="text" class="form-control"
                       placeholder="Search by title or author..." value="@searchTerm" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>

        @if (selectedCategoryId.HasValue || !string.IsNullOrEmpty(searchTerm))
        {
            <div class="mt-3">
                <a asp-action="AvailableBooks" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
                <span class="text-light ms-2">
                    @if (selectedCategoryId.HasValue)
                    {
                        <span>Category: <strong>@(categories.FirstOrDefault(c => c.Value == selectedCategoryId.ToString())?.Text)</strong></span>
                    }
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <span class="ms-2">Search: <strong>"@searchTerm"</strong></span>
                    }
                </span>
            </div>
        }
    </div>

    <!-- ✅ Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ Books Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="book-card shadow-sm">
                        <img src="@($"/images/books/{book.CoverImageUrl}")" alt="@book.Title" class="book-img" />
                        <div class="book-body">
                            <h5 class="fw-bold">@book.Title</h5>
                            <p class="mb-1"><strong>Author:</strong> @book.Author</p>
                            <div>
                                @if (book.BookCategories?.Any() == true)
                                {
                                    @foreach (var bc in book.BookCategories)
                                    {
                                        <span class="badge bg-info category-badge">@bc.Category?.Name</span>
                                    }
                                }
                            </div>

                            <div class="action-buttons">
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@book.Id">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (isAdmin)
                                {
                                    <a class="btn btn-warning text-dark" asp-action="Edit" asp-route-id="@book.Id">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@book.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete @book.Title?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-book fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Books Found</h4>
            <p class="text-muted">Try changing the filters or search criteria.</p>
            @if (isAdmin)
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Book
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
